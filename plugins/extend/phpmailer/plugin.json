{
    "$schema": "../../../system/schema/extend.json",
    "name": "PhpMailer",
    "description": "Adds SMTP support for sending e-mails using the PHPMailer library.",
    "authors": [
        {"name": "Friends of Sunlight CMS", "url": "https://github.com/friends-of-sunlight-cms/"}
    ],
    "version": "1.0.0",
    "environment": {
        "system": "^8.0"
    },
    "config_defaults": {
        "use_smtp": true,
        "smtp_secure": "tls",
        "smtp_auth": true,
        "smtp_host": "",
        "smtp_port": 587,
        "smtp_user": "",
        "smtp_pass": "",
        "sender_email": null,
        "sender_name": null,
        "smtp_auto_tls": true,
        "smtp_debug": 0
    },
    "actions": {
        "config": "ConfigAction"
    },
    "langs": {
        "phpmailer": "lang"
    },
    "events": [
        {"event": "mail.send", "script": "event/mail_send.php"}
    ]
}
